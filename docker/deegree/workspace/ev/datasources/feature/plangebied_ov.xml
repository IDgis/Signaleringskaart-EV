<SimpleSQLFeatureStore xmlns="http://www.deegree.org/datasource/feature/simplesql" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" configVersion="3.0.1" xsi:schemaLocation="http://www.deegree.org/datasource/feature/simplesql http://schemas.deegree.org/datasource/feature/simplesql/3.0.1/simplesql.xsd">
    
    <StorageCRS>EPSG:28992</StorageCRS>
    
    <FeatureTypeName>plangebied_ov</FeatureTypeName>
    
    <FeatureTypeNamespace>http://www.deegree.org/app</FeatureTypeNamespace>
    
    <FeatureTypePrefix>app</FeatureTypePrefix>
    
    <JDBCConnId>jdbc_ev_lime_ov</JDBCConnId>
    
    <SQLStatement>
        SELECT 
            id, 
            submitdate, 
            geom
        FROM 
            (SELECT  
                id, 
                submitdate,                              ST_AsBinary(st_geomfromtext("substring"("457234X4X7", 38, length("457234X4X7") - 50), 28992)) AS geom
                FROM survey_457234 WHERE length("457234X4X7") > 0) plangebieden
                WHERE geom &amp;&amp; st_geomfromtext(?, -1)
    </SQLStatement>
    
    <BBoxStatement>SELECT 'POLYGON((13500 302000,13500 620000,278000 620000,278000 302000,13500 302000))' AS bbox</BBoxStatement>
    
    
    
</SimpleSQLFeatureStore>